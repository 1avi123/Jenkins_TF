stage { 
   stage ('Checkout-infra-code') { 
     steps { 
       sh  'git clone https://github.com/UnixArena/emr_test.git'
}
}

stage ('TF installation') { 
  steps {
   sh '''
    #!/bin/bash
    set +x 
    sudo yum install -y jq
    cd /usr/local/src
    sudo wget https://releases.hasicorp.com/terraform/0.12.9/terraform_0.12.9_linux_amd64.zip
    sudo unzip -o terraform_0.12.9_linux_amd64.zip
    sudo cp -rf terraform /usr/local/bin/
   terraform --version
   ''' 
}
} 
